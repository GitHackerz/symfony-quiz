{% extends 'base.html.twig' %}

{% block title %}Quiz{% endblock %}

{% block body %}
    <h1>Quiz</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ quiz.id }}</td>
            </tr>
            <tr>
                <th>Matiere</th>
                <td>{{ quiz.matiere }}</td>
            </tr>
            <tr>
                <th>DateCreation</th>
                <td>{{ quiz.dateCreation ? quiz.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Score</th>
                <td>{{ quiz.score }}</td>
            </tr>
            <tr>
                <th>DataEnMinute</th>
                <td>{{ quiz.dataEnMinute }}</td>
            </tr>
            <tr>
                <th>Disponibilitee</th>
                <td>{{ quiz.disponibilitee }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ quiz.code }}</td>
            </tr>
            <tr>
                <th>UserID</th>
                <td>{{ quiz.userID }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_quiz_index') }}">back to list</a>

    <a href="{{ path('app_quiz_edit', {'id': quiz.id}) }}">edit</a>

    {{ include('quiz/_delete_form.html.twig') }}
{% endblock %}
