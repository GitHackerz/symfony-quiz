{% extends 'adminBase.html.twig' %}

{% block content %}
	<!-- Table Section -->
	<div
		class="max-w-[85rem] px-4 py-10 sm:px-6 mx-auto">
		<!-- Card -->
		<div class="flex flex-col">
			<div class="-m-1.5 overflow-x-auto">
				<div class="p-1.5 min-w-full inline-block align-middle">
					<div
						class="overflow-hidden bg-white border border-gray-200 shadow-sm rounded-xl dark:bg-slate-900 dark:border-gray-700">
						<!-- Table -->
						<table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
							<thead class="bg-gray-50 dark:bg-slate-800">
								<tr>
									<th scope="col" class="px-6 py-3 text-start">
										<div class="flex items-center gap-x-2">
											<span class="text-xs font-semibold tracking-wide text-gray-800 uppercase dark:text-gray-200">
												Titre
											</span>
										</div>
									</th>

									<th scope="col" class="px-6 py-3 text-start">
										<div class="flex items-center gap-x-2">
											<span class="text-xs font-semibold tracking-wide text-gray-800 uppercase dark:text-gray-200">
												Utilisateur
											</span>
										</div>
									</th>

									<th scope="col" class="px-6 py-3 text-start">
										<div class="flex items-center gap-x-2">
											<span class="text-xs font-semibold tracking-wide text-gray-800 uppercase dark:text-gray-200">
												Contenu
											</span>
										</div>
									</th>

									<th scope="col" class="px-6 py-3 text-start">
										<div class="flex items-center gap-x-2">
											<span class="text-xs font-semibold tracking-wide text-gray-800 uppercase dark:text-gray-200">
												Date
											</span>
										</div>
									</th>

									<th scope="col" class="px-6 py-3 text-start">
										<div class="flex items-center gap-x-2">
											<span class="text-xs font-semibold tracking-wide text-gray-800 uppercase dark:text-gray-200">
												Action
											</span>
										</div>
									</th>
								</tr>
							</thead>

							<tbody class="divide-y divide-gray-200 dark:divide-gray-700">
								{% for post in posts %}
									<tr class="bg-white dark:bg-slate-800">
										<td class="px-6 py-4 whitespace-nowrap">
											<div class="text-sm text-gray-900 dark:text-gray-200">
												A small title
											</div>
										</td>

										<td class="px-6 py-4 whitespace-nowrap">
											<div class="text-sm text-gray-900 dark:text-gray-200">
												{{ post.user }}
											</div>
										</td>

										<td class="px-6 py-4 whitespace-nowrap">
											<div class="text-sm text-gray-900 dark:text-gray-200">
												{{ post.content }}
											</div>
										</td>

										<td class="px-6 py-4 whitespace-nowrap">
											<div class="text-sm text-gray-900 dark:text-gray-200">
												24/09/2021
											</div>
										</td>

										<td class="px-6 py-4 text-sm font-medium text-right whitespace-nowrap">
											<div class="flex items-center justify-end gap-x-2">
												<a href="/post" class="text-red-600 hover:text-red-900 dark:text-red-400 dark:hover:text-red-600">
													Supprimer
												</a>
											</div>
										</td>
									</tr>
								{% endfor %}

							</tbody>
						</table>
						<!-- End Table -->


					</div>
				</div>
			</div>
		</div>
		<!-- End Card -->
	</div>
	<!-- End Table Section -->
{% endblock %}

